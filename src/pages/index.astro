---
import { Image } from 'astro:assets';

import asset_img_cafe from 'src/assets/ascii_hero.jpg';
import BaseLayout from 'src/layouts/base.astro';
import { BusinessHours } from 'src/components/business_hours.tsx';
import { Divider } from 'src/components/divider';
import Featured from 'src/components/patterns/featured.astro';
import { body_small } from 'src/styles/atomic/fonts.css';
import { SvgSticker } from 'src/svg/sticker';

import {
    become_member,
    become_member_featured,
    become_member_head,
    business_hours,
    business_hours_footnote,
    business_hours_head,
    divider_1,
    divider_2,
    divider_3,
    divider_4,
    hero,
    hero_image,
    hero_summary,
    next_event,
    next_event_featured,
    next_event_head,
    offer,
    offer_featured,
    offer_head,
} from './index.css.ts';
---

<BaseLayout>
    <section class={hero}>
        <div class={hero_image}>
            <Image src={asset_img_cafe} alt="ascii Theke" />
        </div>
        <div class={hero_summary}>
            <h2>Willkommen im ascii!</h2>
            <p>
                Wir sind ein von Student*innen geführtes Café in der Fakultät Informatik der TU Dresden. Wir versorgen euch mit Kalt- und Heißgetränken und auch Snacks, damit ihr den Unialltag gut überstehen könnt. Und wenn ihr zwischen den Vorlesungen einen Platz zum Entspannen braucht, bieten euch unsere Sofas den idealen Ort zum Verweilen und zum Austausch mit euren Kommiliton*innen.
            </p>
        </div>
    </section>
    <Divider class={divider_1} />
    <section class={next_event}>
        <h2 class={next_event_head}>Nächstes Event</h2>
        <Featured class={next_event_featured} href="/events">
            <Fragment slot="title">Spieleabend</Fragment>
            <Fragment slot="description">
                Jeden Mittwochabend ist Spieleabend! Wir treffen uns regelmäßig zum gemeinsamen Essen, Quatschen, und natürlich Spielen. Dabei wird aus einer großen Auswahl an Brett- und Kartenspielen ausgesucht, manchmal spielen wir auch etwas an unserer Leinwand. Kommt gerne vorbei!
            </Fragment>

            <Fragment slot="date">2023/09/14</Fragment>
            <Fragment slot="image">
                <Image src={asset_img_cafe} alt="Event" />
            </Fragment>
            <Fragment slot="button">Events</Fragment>
        </Featured>
    </section>
    <Divider class={divider_2} />
    <section class={offer}>
        <h2 class={offer_head}>Angebot</h2>
        <Featured class={offer_featured} mirror={true} href="/events">
            <Fragment slot="title">Getränk des Monats</Fragment>
            <Fragment slot="description">Wostok Wostok Wostok Wostok</Fragment>
            <Fragment slot="date">Oktober 2023</Fragment>
            <Fragment slot="image">
                <Image src={asset_img_cafe} alt="Angebot" />
            </Fragment>
            <Fragment slot="button">Angebot</Fragment>
        </Featured>
    </section>
    <Divider class={divider_3} />
    <section class={become_member}>
        <h2 class={become_member_head}>Werde Mitglied</h2>
        <Featured class={become_member_featured} href="/verein" noImageBorder outline>
            <Fragment slot="description">
                Möchtest du Teil eines bunten Haufens werden und die Campus-Community bereichern? Wir suchen stets nach engagierten Neumitgliedern für unser kleines Café. Bei uns kannst du nicht nur Kaffee brauen, sondern auch neue Freundschaften knüpfen, Events organisieren und Teil eines lebendigen Netzwerks sein. Interesse? Melde dich bei uns ❤
            </Fragment>
            <Fragment slot="image">
                <SvgSticker />
            </Fragment>
            <Fragment slot="button">Ich bin dabei!</Fragment>
        </Featured>
    </section>
    <Divider class={divider_4} />
    <section class={business_hours}>
        <h2 class={business_hours_head}>Öffnungszeiten</h2>
        <BusinessHours />
        <p class:list={[body_small, business_hours_footnote]}>Öffnungszeiten können abweichen</p>
    </section>
</BaseLayout>
