{
	"$schema": "http://json.schemastore.org/prettierrc",
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "es5",
	"printWidth": 100,
	"plugins": ["prettier-plugin-astro"],
	"proseWrap": "always",
	"singleAttributePerLine": true,
	"overrides": [
		{
			"files": ["*.yml", "*.yaml"],
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		},
		{
			"files": "*.svg",
			"options": {
				"parser": "html"
			}
		}
	]
}
